<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Test Application{% endblock %}</title>
</head>
<body>
<div id="sidebar">
    {% block sidebar %}
    {% if app.user %}
            <ul>
                <li>My blog</li>
                <li><a href="{{path('main')}}">Home</a></li>
                <li><a href="{{path('create')}}">NewPost</a></li>
                <li><a href="{{path('view-my')}}">MyPosts</a></li>
                <li><a href=>Logout</a></li>
            </ul>

    {% elseif is_granted(expression('is_anonymous()')) %}
            <ul>
                <li>My blog</li>
                <li><a href="{{path('main')}}">Home</a></li>
                <li><a href="/login">Login</a></li>
            </ul>
    {% endif %}
    {% endblock %}
</div>

<div id="content">
    {% block body %}{% endblock %}
</div>
</body>
</html>